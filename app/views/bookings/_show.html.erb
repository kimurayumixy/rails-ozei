<%= render "shared/navbar" %>
<% if @booking.status == "user_confirmed" %>
  <h1>Reservation Confirmed</h1>
<% end %>
<div class="restaurant">
  <%= render 'carousel', restaurant: @restaurant %>
  <div class="restaurant-display">
    <h1><%= @restaurant.name %></h1>
    <p class="address"><%= @restaurant.address %></p>
    <hr>
    <div>
      <div class="restaurant-content">
        <p><%= @restaurant.category %></p>
        <div>
          <i class="fa-solid fa-user-group"></i>
          <%= @restaurant.maximum_number %>
        </div>
        <div class="d-flex">
          <% @restaurant.price_range.length.times do %>
            <i class="fa-solid fa-yen-sign"></i>
          <% end %>
        </div>
      </div>
    </div>
    <%# linking to form  %>
    <div class="select-card m-3">
      <%= simple_form_for [@restaurant, @booking] do |f| %>
        <%= f.input :number_of_people, as: :hidden, input_html: {value: params[:group_size]} %>
        <%= button_tag type: 'submit', class: "reserve-button" do %>
          Reserve
        <% end %>
      <% end %>
      <%# linking to form  %>
    </div>
  </div>
  <%= render "show_map" %>
